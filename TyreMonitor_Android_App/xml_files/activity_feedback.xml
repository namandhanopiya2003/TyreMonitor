<!-- Main layout for the Feedback screen -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_image">

    <!-- Top bar with a back button and title -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="#000000">

        <!-- Button that lets user go back -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#FF007F"
            android:backgroundTint="@android:color/black"
            android:paddingTop="7dp"/>

        <!-- Text title shown on the top bar -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:gravity="right"
            android:textColor="#B8B8B8"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:paddingTop="7dp"/>
    </LinearLayout>

    <!-- Scrollable area for the feedback form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Container holding feedback fields -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Message encouraging users to share feedback -->
            <TextView
                android:id="@+id/tvFeedbackTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We value your feedback. Kindly take a moment to share your thoughts with us."
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="16dp"
                android:textColor="@android:color/black"/>

            <!-- Text box for writing feedback -->
            <EditText
                android:id="@+id/etFeedback"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:hint="Write your feedback here..."
                android:background="@android:drawable/edit_text"
                android:gravity="top"
                android:padding="12dp"
                android:inputType="textMultiLine"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#50000000"
                android:textColor="@color/white"
                android:textColorHint="@color/white"/>

            <!-- Section for rating the app -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="16dp">

                <!-- Text above the rating stars -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate your experience:"
                    android:textSize="16sp"
                    android:paddingBottom="8dp"
                    android:textColor="@android:color/black"/>

                <!-- 5-star rating bar -->
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="0"/>
            </LinearLayout>

            <!-- Button to submit feedback -->
            <Button
                android:id="@+id/btnSubmitFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
