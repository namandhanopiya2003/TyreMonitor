<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_profile">

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:background="#000000">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:textColor="#FF007F"
                    android:backgroundTint="@android:color/black"
                    android:paddingTop="7dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:gravity="right"
                    android:textColor="#B8B8B8"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:paddingTop="7dp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:padding="16dp"
                app:cardBackgroundColor="#50000000">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="4dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"/>

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter name"
                        android:visibility="gone"
                        android:layout_marginBottom="8dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#50000000"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Role:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="4dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"/>

                    <EditText
                        android:id="@+id/etRole"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter role"
                        android:visibility="gone"
                        android:layout_marginBottom="8dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#50000000"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:textColor="@android:color/black"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"/>

                    <EditText
                        android:id="@+id/etContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter contact"
                        android:visibility="gone"
                        android:layout_marginBottom="16dp"/>

                    <Button
                        android:id="@+id/btnEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:backgroundTint="#50000000"
                        android:textColor="@android:color/white"
                        android:padding="12dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="160dp"
                        android:layout_marginRight="60dp"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Need help or more information? Check below:"
            android:textColor="#B8B8B8"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnUsagePolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Usage Policy"
            android:backgroundTint="@android:color/black"
            android:textColor="@android:color/white"
            android:gravity="start"
            android:paddingStart="16dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnHelpFAQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Help / FAQ"
            android:backgroundTint="@android:color/black"
            android:textColor="@android:color/white"
            android:gravity="start"
            android:paddingStart="16dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnAboutApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• About App"
            android:backgroundTint="@android:color/black"
            android:textColor="@android:color/white"
            android:gravity="start"
            android:paddingStart="16dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  LOGOUT"
            android:backgroundTint="@android:color/black"
            android:textColor="#B22222"
            android:gravity="start"
            android:paddingStart="16dp"/>
    </LinearLayout>

</RelativeLayout>