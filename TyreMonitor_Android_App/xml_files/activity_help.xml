<!-- Main screen layout with vertical orientation and background image -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_image">

    <!-- Top bar: back button on the left, screen title on the right -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="#000000">

        <!-- Back button for navigation -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#FF007F"
            android:backgroundTint="@android:color/black"
            android:paddingTop="7dp"/>

        <!-- Title text for this screen -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Help / FAQ"
            android:gravity="right"
            android:textColor="#B8B8B8"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:paddingTop="7dp"/>
    </LinearLayout>

    <!-- Scrollable section to hold the actual help/FAQ content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Page heading -->
            <TextView
                android:id="@+id/tvHelpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help / FAQ"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingBottom="16dp"
                android:textColor="@android:color/black"/>

            <!-- Intro section with a welcome note and quick bullets -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <!-- Intro title -->
                <TextView
                    android:id="@+id/tvHelpIntroTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to TyreMonitor!"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"
                    android:textColor="@android:color/black"/>

                <!-- Introductory points about app usage -->
                <TextView
                    android:id="@+id/tvHelpIntro1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Quickly monitor your vehicle's tyre health using real-time sensor data."
                    android:textSize="16sp"
                    android:paddingBottom="4dp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tvHelpIntro2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Understand tyre performance with confidence scores generated using machine learning."
                    android:textSize="16sp"
                    android:paddingBottom="4dp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tvHelpIntro3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Update and manage vehicle information for accurate monitoring."
                    android:textSize="16sp"
                    android:paddingBottom="4dp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tvHelpIntro4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Access answers to common questions below to get started quickly."
                    android:textSize="16sp"
                    android:paddingBottom="4dp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <!-- FAQ item 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                android:padding="12dp"
                app:cardBackgroundColor="#50000000">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvQuestion1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. How do I check tyre status?"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/tvAnswer1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Go to the vehicle dashboard and select the tyre monitoring section to view current tyre status, pressure, and confidence scores."
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:textColor="@android:color/black"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- FAQ item 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                android:padding="12dp"
                app:cardBackgroundColor="#50000000">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvQuestion2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. How do I update vehicle information?"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/tvAnswer2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Go to the Vehicle Management section, select the vehicle, and tap 'Edit' to update the information."
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:textColor="@android:color/black"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- FAQ item 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                android:padding="12dp"
                app:cardBackgroundColor="#50000000">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvQuestion3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. What do the confidence scores mean?"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/tvAnswer3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Confidence scores indicate the reliability of tyre health based on sensor data and ML analysis."
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:textColor="@android:color/black"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- FAQ item 4 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                android:padding="12dp"
                app:cardBackgroundColor="#50000000">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvQuestion4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4. How do I reset my password?"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/tvAnswer4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Go to Settings > Account > Reset Password. Follow the instructions to update your password securely."
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:textColor="@android:color/black"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
