<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_image">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="#000000">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#FF007F"
            android:backgroundTint="@android:color/black"
            android:paddingTop="7dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="About TyreMonitor"
            android:gravity="right"
            android:textColor="#B8B8B8"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:paddingTop="7dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:padding="16dp"
                app:cardBackgroundColor="#50000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAboutTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About TyreMonitor"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:paddingBottom="16dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/tvAboutContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- TyreMonitor is a comprehensive vehicle tyre monitoring application designed to help fleet owners, commercial drivers, and everyday vehicle users track tyre health and ensure optimal safety.\n\n- Key features include:\n• Real-time tyre health monitoring\n• ML-based confidence scoring for tyres\n• Vehicle management and analytics\n• Detailed maintenance guidelines\n• Notifications for tyre replacement and rotation\n• User-friendly interface with clear visuals and reports\n\n- Our mission is to reduce maintenance costs, prevent tyre-related accidents, and improve overall fleet and vehicle efficiency.\n\n- We continually update the app with the latest recommendations and improvements to provide the safest and most effective tyre monitoring experience possible."
                        android:textSize="16sp"
                        android:paddingBottom="12dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCopyAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copy Info"
                android:textColor="#00CED1"
                android:backgroundTint="#000000"
                app:cornerRadius="12dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
