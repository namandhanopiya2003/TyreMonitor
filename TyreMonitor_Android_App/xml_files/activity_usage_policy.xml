<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_image">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="#000000">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#FF007F"
            android:backgroundTint="@android:color/black"
            android:paddingTop="7dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Usage Policy"
            android:gravity="right"
            android:textColor="#B8B8B8"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:paddingTop="7dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:padding="16dp"
                app:cardBackgroundColor="#50000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUsagePolicyTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="App Usage Policy"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:paddingBottom="16dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. Introduction\nWelcome to our app. By accessing or using this application, you agree to comply with this Usage Policy. Please read carefully."
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingBottom="12dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. User Conduct\n- Users must not misuse the app or interfere with its normal operation.\n- No unauthorized access or hacking attempts.\n- Respect intellectual property rights of content provided."
                        android:textSize="16sp"
                        android:paddingBottom="12dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. Privacy\n- We may collect non-personal data for improving app performance.\n- Personal information will never be sold or shared without consent.\n- Users should avoid sharing sensitive personal data within the app."
                        android:textSize="16sp"
                        android:paddingBottom="12dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4. Content Usage\n- Content within the app is for personal use only.\n- Redistribution or modification without permission is prohibited.\n- Users are responsible for the content they upload, if applicable."
                        android:textSize="16sp"
                        android:paddingBottom="12dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5. Prohibited Actions\n- Using the app for commercial purposes without approval.\n- Attempting to bypass security measures."
                        android:textSize="16sp"
                        android:paddingBottom="12dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6. Account Responsibility\n- Keep login credentials secure.\n- Notify support immediately in case of unauthorized access.\n- We are not responsible for losses due to compromised accounts."
                        android:textSize="16sp"
                        android:paddingBottom="12dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7. Limitation of Liability\n- The app is provided 'as is' without warranties.\n- We are not liable for indirect, incidental, or consequential damages.\n- Users assume all responsibility for using the app."
                        android:textSize="16sp"
                        android:paddingBottom="12dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="8. Changes to Policy\n- We may update this policy at any time.\n- Users are encouraged to review this page periodically.\n- Continued use constitutes acceptance of changes."
                        android:textSize="16sp"
                        android:paddingBottom="12dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9. Contact\nFor any questions or concerns, please contact support@example.com.\nThank you for using our app responsibly. Enjoy your experience!"
                        android:textSize="16sp"
                        android:paddingBottom="12dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCopyPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copy Policy"
                android:textColor="#00CED1"
                android:backgroundTint="#000000"
                app:cornerRadius="12dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
