<?xml version="1.0" encoding="utf-8"?>
<!-- Root layout for the dashboard screen -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_image">

    <!-- Scrollable area for dashboard content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- App header bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:background="@android:color/black"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <!-- App name text -->
                <TextView
                    android:id="@+id/tvAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TyreMonitor"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="#B8B8B8"/>
            </LinearLayout>

            <!-- Welcome section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"
                    android:paddingTop="66dp">

                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome, User 👋"
                        android:textSize="24sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvPrompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What would you like to do today?"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <!-- Row 1: Vehicles + Profile -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardVehicles"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@android:color/black"
                        app:strokeWidth="3dp"
                        app:strokeColor="@android:color/black">

                        <TextView
                            android:id="@+id/cardVehiclesText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:text="🚚\n\n\n\nVehicle List"
                            android:textColor="#4169E1"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardProfile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@android:color/black"
                        app:strokeWidth="3dp"
                        app:strokeColor="@android:color/black">

                        <TextView
                            android:id="@+id/cardProfileText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:text="🙋\n\n\n\nProfile"
                            android:textColor="#228B22"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Row 2: Usage Policy + Summary -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardUsagePolicy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@android:color/black"
                        app:strokeWidth="3dp"
                        app:strokeColor="@android:color/black">

                        <TextView
                            android:id="@+id/cardUsagePolicyText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:text="📝\n\n\n\nUsage Policy"
                            android:textColor="#FF007F"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSummary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@android:color/black"
                        app:strokeWidth="3dp"
                        app:strokeColor="@android:color/black">

                        <TextView
                            android:id="@+id/cardSummaryText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:text="📈\n\n\n\nSummary Report"
                            android:textColor="#E9967A"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Row 3: Maintenance + Help -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardMaintenance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@android:color/black"
                        app:strokeWidth="3dp"
                        app:strokeColor="@android:color/black">

                        <TextView
                            android:id="@+id/cardMaintenanceText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:text="⚙️\n\n\nTyre Maintenance Guidelines"
                            android:textColor="#00CED1"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardHelp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@android:color/black"
                        app:strokeWidth="3dp"
                        app:strokeColor="@android:color/black">

                        <TextView
                            android:id="@+id/cardHelpText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:text="❓\n\n\n\nHelp / FAQ"
                            android:textColor="#9932CC"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Row 4: About + Feedback -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardAbout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@android:color/black"
                        app:strokeWidth="3dp"
                        app:strokeColor="@android:color/black">

                        <TextView
                            android:id="@+id/cardAboutText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:text="📖\n\n\n\nAbout App"
                            android:textColor="#483D8B"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardFeedback"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@android:color/black"
                        app:strokeWidth="3dp"
                        app:strokeColor="@android:color/black">

                        <TextView
                            android:id="@+id/cardFeedbackText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:text="📬\n\n\n\nFeedback"
                            android:textColor="#FF5E5B"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom section: Logout button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@android:color/black"
        android:gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/black"
            app:strokeWidth="3dp"
            app:strokeColor="@android:color/black">

            <TextView
                android:id="@+id/cardLogoutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="🔐 Logout"
                android:textColor="#B22222"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</LinearLayout>
