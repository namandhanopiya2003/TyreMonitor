<?xml version="1.0" encoding="utf-8"?>
<!-- Root layout for Vehicle Details screen -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image">

    <!-- Header Bar with back button -->
    <LinearLayout
        android:id="@+id/headerBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@android:color/black"
        android:paddingVertical="12dp"
        android:paddingHorizontal="0dp">

        <!-- Simple Back button (returns user to previous screen) -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="#FF007F"
            android:backgroundTint="@android:color/black"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingTop="7dp"/>
    </LinearLayout>

    <!-- Main content area -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top">

        <!-- Card container for vehicle details -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#50000000">

            <!-- Inside card: vehicle details stacked vertically -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Vehicle Name -->
                <TextView
                    android:id="@+id/tvVehicleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@android:color/white"/>

                <!-- Registration Number -->
                <TextView
                    android:id="@+id/tvVehicleReg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Reg No"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@android:color/black"/>

                <!-- Tyre Pressure -->
                <TextView
                    android:id="@+id/tvTyrePressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Tyre Pressure"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@android:color/black"/>

                <!-- Tyre Age label -->
                <TextView
                    android:id="@+id/tvAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Tyre Age:"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@android:color/black"/>

                <!-- Rating bar to visualize tyre age (1-5 scale) -->
                <RatingBar
                    android:id="@+id/ratingAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:isIndicator="true"
                    android:progressTint="#FFD700"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="10dp"/>

                <!-- Load Capacity label -->
                <TextView
                    android:id="@+id/tvLoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Load Capacity:"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@android:color/black"/>

                <!-- Progress bar to indicate load capacity (0-20 range) -->
                <ProgressBar
                    android:id="@+id/progressLoad"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="20"
                    android:progress="0"
                    android:progressTint="#4CAF50"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Footer strip at bottom -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000" />
</LinearLayout>
